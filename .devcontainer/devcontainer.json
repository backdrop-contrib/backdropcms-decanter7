// See: https://www.drupal.org/docs/develop/development-tools/editors-and-ides/configuring-visual-studio-code
{
	"name": "${localWorkspaceFolderBasename} - DropDev",
	"dockerComposeFile": "docker-compose.yml",
	"service": "devcontainer",
	"workspaceFolder": "/workspace",
	"containerEnv": {
		"PROJECT": "${localWorkspaceFolderBasename}",
		"COMPOSE_PROJECT_NAME": "${localWorkspaceFolderBasename}",
	},
	"remoteUser": "root",
	"mounts": [
		// "source=source=${localWorkspaceFolder},target=/var/www/html/themes/stanford_decanter,type=bind,consistency=cached",
		"source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/root/.ssh,type=bind,consistency=cached",
		"source=${localEnv:HOME}${localEnv:USERPROFILE}/.terminus,target=/root/.terminus,type=bind,consistency=cached",
	],
	"features": {
		"ghcr.io/devcontainers/features/python:1": {},
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
		"ghcr.io/devcontainers/features/node:1": {},
		"ghcr.io/devcontainers-extra/features/vscode-cli:1": {},
		"ghcr.io/stuartleeks/dev-container-features/shell-history:0": {}
	},
	"customizations": {
		"vscode": {
			"settings": {
				"peacock.remoteColor": "#f9e64f",
				"workbench.colorCustomizations": {
					"activityBar.activeBackground": "#fbed80",
					"activityBar.background": "#fbed80",
					"activityBar.foreground": "#15202b",
					"activityBar.inactiveForeground": "#15202b99",
					"activityBarBadge.background": "#06b9a5",
					"activityBarBadge.foreground": "#15202b",
					"commandCenter.border": "#15202b99",
					"sash.hoverBorder": "#fbed80",
					"statusBar.background": "#f9e64f",
					"statusBar.foreground": "#15202b",
					"statusBarItem.hoverBackground": "#f7df1e",
					"statusBarItem.remoteBackground": "#f9e64f",
					"statusBarItem.remoteForeground": "#15202b",
					"titleBar.activeBackground": "#f9e64f",
					"titleBar.activeForeground": "#15202b",
					"titleBar.inactiveBackground": "#f9e64f99",
					"titleBar.inactiveForeground": "#15202b99"
				},
				"files.exclude": {
					// ".*": true, // Hide all hidden files for a focused view of just the source
					"**/.git": true,
					"**/.DS_Store": true,
					"**/Thumbs.db": true
				},
				"cSpell.enabled": true,
				"cSpell.words": [
						"devcontainer",
						"baskstop",
						"devcontainer",
						"dropdev",
						"preprocess",
						"proot",
						"reqs",
						"savethebw",
						"todid",
						"viewports",
						"yamls",
						"zcat"
					],
					"files.associations": {
						"*.inc": "php",
						"*.module": "php",
						"*.theme": "php",
						"*.install": "php"
					},
					"[php]": {},
					"workbench.startupEditor": "none",
					"task.allowAutomaticTasks": "on",
					"terminal.integrated.defaultProfile.linux": "zsh",
					"debug.internalConsoleOptions": "neverOpen",
					"debug.showBreakpointsInOverviewRuler": false,
					"debug.terminal.clearBeforeReusing": false,
					"editor.tabSize": 2
    },
    "extensions": [
					"philfontaine.autolaunch",
					"xdebug.php-debug",
					"bmewburn.vscode-intelephense-client",
					"streetsidesoftware.code-spell-checker",
					"EditorConfig.EditorConfig",
					"ms-azuretools.vscode-docker",
					"mrmlnc.vscode-apache",
					"DavidAnson.vscode-markdownlint",
					"yzhang.markdown-all-in-one",
					"donjayamanne.githistory",
					"ritwickdey.LiveServer",
					"johnpapa.vscode-peacock",
					"bradlc.vscode-tailwindcss",
					"task.vscode-task"
				]
			}
		}
	}
